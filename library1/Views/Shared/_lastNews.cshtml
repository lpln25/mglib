@{
}

@model IEnumerable<library1.Models.News>

<div id="newsPatial">
    <span class="cart-title">آخرین خبر</span>
    <hr class="break-dash" />
    @if (Model != null)
    {
        @if (Model.Count() == 0)
        {
            <div class="title-small">بدون اطلاعیه و خبر جدید</div>

        }
        @foreach (var item in Model)
        {

            <a class="title-item" asp-action="NewDetails" asp-controller="News" asp-area="Admin" asp-route-id="@item.NewsId">
                @if (item.newsImage != null)
                {
                    <img src="@ViewBag.thumbnailnews@item.newsImage" class="img-bit img-thumbnail" />
                }
                else
                {
                    <img src="~/images/img01.png" />
                }
                <span>@item.newTitle</span>
            </a>
            <hr class="break" />
        }
    }





</div>