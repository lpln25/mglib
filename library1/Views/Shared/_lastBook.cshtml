@{
}

@model IEnumerable<library1.Models.Book>

<div id="bookPatial">
    <span class="cart-title">بالاترین بازدید </span>
    <hr class="break-dash" />
    @foreach (var item in Model)
    {
        <a asp-area="Admin" asp-controller="Book" asp-action="BookDetails" asp-route-id="@item.BookId" class="title-item">
            @if (@item.Image != null)
            {
                <img src="@ViewBag.imageThumbnail@item.Image" class="img-circle img-bit" />
            }
            else
            {
                <img src="~/images/book01 (Custom).jpg" class="img-circle img-bit" />

            }
            <span>@item.BookName</span>
        </a>
        <hr class="break" />

    }

</div>