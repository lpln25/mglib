@using library1.PublicModel
@model library1.Models.Author
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, library1


<form asp-action="AddEditAuthor" asp-controller="Author"
      id="addexitauthor" data-ajax="true" data-ajax-method="POST"
      data-ajax-update="#addexitauthor" data-ajax-mode="replace">

    @* header *@
    @if (Model.AuthorId == 0)
    {
        @await Html.PartialAsync("_Modalheader", new ModelHeader { Header = "افزودن نویسنده" })
    }
    else
    {
        @await Html.PartialAsync("_Modalheader", new ModelHeader { Header = "ویرایش نویسنده" })
    }


    @* body *@
    <div class="modal-body form-horizontal">
        <div class="row">

            <div class="form-group">
                <label asp-for="AuthorName" class="col-lg-3 col-sm-3 control-label title-small"></label>
                <div class="col-lg-6">
                    <input asp-for="AuthorName" class="form-control title-medium" />
                    <span asp-validation-for="AuthorName" class="title-small"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="col-lg-3 col-sm-3 control-label title-small"></label>
                <div class="col-lg-6">
                    <input asp-for="Description" class="form-control title-medium" />
                    <span asp-validation-for="Description" class="title-small"></span>
                </div>
            </div>

            <div class="form-group hidden">
                <input asp-for="AuthorId" class="form-control title-medium" />
            </div>

            <input type="hidden" name="redirectUrl" value="@Url.Action("Index","Author")" />

        </div>
    </div>

    @* footer *@
    @if (Model.AuthorId == 0)
    {
        @await Html.PartialAsync("_Modalfooter", new Modalfooter { SubmitButtonText = "ثبت", OnlyCancelButton = false })
    }
    else
    {
        @await Html.PartialAsync("_Modalfooter", new Modalfooter { SubmitButtonText = "بروز رسانی", OnlyCancelButton = false })
    }

</form>